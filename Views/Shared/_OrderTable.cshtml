@model IEnumerable<Order>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Country</th>
            <th>City</th>
            <th>Email</th>
            <th>Order Total</th>
            <th>Order Placed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.FirstName</td>
                <td>@order.LastName</td>
                <td>@order.Country</td>
                <td>@order.City</td>
                <td>@order.Email</td>
                <td>@order.OrderTotal.ToString("C", CultureInfo.CreateSpecificCulture("ar-SA"))</td>
                <td>@order.OrderPlaced</td>
                <td>
                    <div class="d-flex gap-2">
                        <a class="text-primary" asp-action="Details" asp-route-id="@order.OrderId"><i class="fa fa-eye"></i></a>
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <a class="text-danger" asp-action="Delete" asp-route-id="@order.OrderId"><i class="fa fa-trash-can"></i></a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
