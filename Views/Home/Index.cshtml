@model HomeViewModel


<div class="row mb-4">
    <div class="col-4">
        <a asp-controller="Item" asp-action="List" class="text-decoration-none">
        <div class="card">
            <div class="card-body d-flex align-items-center gap-2">
                    <i class="fa-solid fa-2x fa-gear text-primary"></i> <span class="fw-bold">Items</span>
            </div>
        </div>
        </a>
    </div>

    <div class="col-4">
        <a asp-controller="Category" asp-action="List" class="text-decoration-none">
            <div class="card">
                <div class="card-body d-flex align-items-center gap-2">
                    <i class="fa-solid fa-2x fa-gear text-primary"></i> <span class="fw-bold">Categories</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-4">
        <a asp-controller="Order" asp-action="List" class="text-decoration-none">
            <div class="card">
                <div class="card-body d-flex align-items-center gap-2">
                    <i class="fa-solid fa-2x fa-gear text-primary"></i> <span class="fw-bold">Orders</span>
                </div>
            </div>
        </a>
    </div>
</div>


<partial name="_Carousel" />

<div class="text-center">
    <img src="Images/bethanys-pie-shop-logomark.png" class="logo-mark mx-auto" />
    <h1>Items of the week</h1>
    <h5>Enjoy a weekly selection of our favorite items</h5>

    <div class="row items-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var pie in Model.PiesOfTheWeek)
            {
                <partial name="_PieCard" model="pie" />
            }
        </div>

    </div>
</div>
