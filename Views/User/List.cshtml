
@model UserListViewModel

<div class="mt-4">
    <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Add</a>

    <div class="form-group mt-4">
        <form  asp-action="List">
            <label class="form-label">Name</label>
            <input type="text" name="search" class="form-control" />
            <input type="submit" value="Filter" class="btn btn-primary" />
        </form>
    </div>

    <div class="form-group mt-4">
        <label class="form-label">Sort by </label>

        <a asp-action="List" asp-route-sortOrder="@ViewData["IdSortParm"]">Id</a>

        <a asp-action="List" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>

    </div>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">

    <partial name="_Usertable" model="Model" />

