@model IdentityUser

@{
    ViewData["Title"] = "User Details";
}

<h1 class="mt-4">User Details</h1>

<div class="card mt-4">
    <div class="card-header">
        <h4 class="mb-0">@Model.Email</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-2 font-weight-bold">
                User ID
            </div>
            <div class="col-sm-10">
                @Model.Id
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-2 font-weight-bold">
                Email
            </div>
            <div class="col-sm-10">
                @Model.Email
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-2 font-weight-bold">
                UserName
            </div>
            <div class="col-sm-10">
                @Model.UserName
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <a asp-action="List" class="btn btn-primary">Back to List</a>
    </div>
</div>
