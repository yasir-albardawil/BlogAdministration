@model ItemListViewModel

<div class="mt-4">
    <a asp-controller="Item" asp-action="Create" class="btn btn-primary">Add <i class="fa-solid fa-plus"></i></a>

    <div class="form-group mt-4">
        <form asp-controller="Item" asp-action="List">
            <label class="form-label">Name</label>
            <div class="d-flex gap-2">
                <input type="text" name="search" class="form-control" />
                <button class="btn btn-primary d-flex align-items-baseline gap-2" gap-2">Filter <i class="fa-solid fa-filter"></i></button>
            </div>
        </form>
    </div>

    <div class="form-group mt-4">
        <label class="form-label">Sort by </label>

    <a asp-action="List" asp-route-sortOrder="@ViewData["IdSortParm"]">Id</a>

    <a asp-action="List" asp-route-sortOrder="@ViewData["NameSortParm"]">Name</a>

    </div>
</div>
<div class="row row-cols-1 row-cols-md-3 g-4">

    <partial name="_Pietable" model="Model.AllItems" />

